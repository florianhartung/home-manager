// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_ui_font_size": 13.0,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 400.0,
  "use_system_prompts": true,
  "inline_code_actions": true,
  "notification_panel": {
    "button": false
  },
  "show_edit_predictions": true,
  "git_panel": {
    "button": false
  },
  "outline_panel": {
    "indent_guides": {
      "show": "always"
    },
    "dock": "left",
    "button": true
  },
  "collaboration_panel": {
    "button": false
  },
  "auto_update": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "agent": {
    "enable_feedback": false,
    "button": false,
    "model_parameters": []
  },
  "search": {
    "button": false
  },
  "status_bar": {
    "cursor_position_button": true,
    "active_language_button": false
  },
  "project_panel": {
    "file_icons": true,
    "entry_spacing": "comfortable",
    "button": true
  },
  "debugger": {
    "button": false
  },
  "title_bar": {
    "show_sign_in": false,
    "show_user_picture": false,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_branch_icon": false,
    "show_branch_name": true
  },
  "theme": "Duskfox",
  "helix_mode": true,
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 13.0,
  "buffer_font_size": 13.0,
  "terminal": {
    "button": false,
    "dock": "right",
    "font_family": "JetBrains Mono",
    "font_size": 13,
    "font_weight": 300
  },
  "ui_font_family": "JetBrains Mono",
  "inlay_hints": {
    "show_other_hints": false,
    "show_parameter_hints": true,
    "show_value_hints": true,
    "show_background": false,
    "enabled": true
  },
  "load_direnv": "shell_hook",
  "gutter": {
    "line_numbers": true,
    "runnables": false,
    "breakpoints": false,
    "min_line_number_digits": 4,
    "folds": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "file_icons": false, // TODO
    "git_status": true, // TODO
    "show_diagnostics": "off" // TODO
  },
  "toolbar": {
    "breadcrumbs": true, // TODO
    "quick_actions": false, // TODO
    "selections_menu": true, // TODO
    "agent_review": false,
    "code_actions": true // TODO
  },
  "diagnostics": {
    "button": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "git": {
    // "git_gutter": null,
    // "gutter_debounce": null,
    "branch_picker": {
      "show_author_name": true
    },
    "blame": {
      "show_avatar": false
    },
    "inline_blame": {
      "enabled": true,
      "padding": 8
    },
    "hunk_style": "staged_hollow"
  },
  "go_to_definition_fallback": "none",

  "relative_line_numbers": true,
  "auto_install_extensions": {
    "material-icon-theme": true,
    "nix": true,
    "toml": true,
    "nightfox": true
  },

  "theme_overrides": {
    "Duskfox": {
      // Backgrounds
      "editor.background": "#191726",
      "elevated_surface.background": "#191726",
      "surface.background": "#191726",
      "background": "#191726",
      "panel.background": "#191726",
      "scrollbar.track.background": "#191726",
      "editor.gutter.background": "#191726",
      "terminal.background": "#191726",

      "syntax": {
        "attribute": {
          "color": "#D9B959"
        },
        "comment": {
          "color": "#6F7485",
          "font_style": "italic"
        },
        "comment.doc": {
          "color": "#8B8793"
        },
        "keyword": {
          "color": "#F1748B"
        },
        "function": {
          "color": "#9896E4"
        },
        "hint": {
          // "color": "#FF0000"
          "font_style": "italic"
        }
      }
    }
  }
}
